<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

  <main>
    <h1 class="title" ><%= title %></h1>
    <% if (user) { %> 
      <a href="/sleeps/new" class="btn btn-primary btn-lg add-btn">Log Naps</a>
    <% } %>
    <% sleeps.forEach(sleep => { %>  
      <div class="card text-center w-50">
        <div class="card-body">
          <h2 class="card-title"><%= sleep.date %></h2>
          <% if (sleep.amount) {%> 
            <p class="card-text">Amount: <%= sleep.amount %> hours</p>
          <% } %>
          <p class="card-text">Nap logged by: <a class="prof-card" href="/profiles/<%= sleep.createdBy._id %>"><%= sleep.createdBy.name %></a></p>
          <% if (user) {%> 
            <% if (sleep.shared) { %> 
              <p>This Object is shared</p>
              <% if (twins.length) { %> 
                <% if (twins.length !== checkAll(twins, sleep)) {%> 
                  <form 
                   action="/twins/<%= sleep._id %>/sleeps"
                  method="post"
                  >
                  <label> Choose your Baby:
                  <select name="twinId">
                  <% twins.forEach(twin => { %>
                  <% if (!(twin.sleeps.includes(sleep._id))) {%> 
                  <option value="<%= twin._id %>"><%= twin.name %></option>
                    <% } %>
                  <% }) %>
                  </select>
                  </label>
                  <button type="submit" class="btn btn-primary add">Add</button>
                  </form>
                  <% } else { %>
                    <p>This object already logged under baby</p>
                  <% } %> 
              <% } else { %>
                <p>You don't have any Babies yet <a href="/twins/new" class="btn btn-primary">Add Baby</a></p>
              <% } %>
            <% } else {%>
              <p>This Object is not shared</p>
            <% } %> 
          <% } %> 
        </div>
      </div>
      <% }) %>

      <% function checkAll(twins, sleep) { %>
        <% let total = 0 %>
        <%  twins.forEach(twin => {%>
        <%  if (twin.sleeps.includes(sleep._id)) {%>
          <% total += 1 }%>
          <% %> 
        <% }) %>  
        <% return total %>
      <% } %>

  </main>

  <%- include('../partials/footer') %>
