<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1 class="title"><%= title %></h1>
  <form class="new-item" action="/twins/<%= twin._id %>?_method=PUT" method="POST" autocomplete="off">
    <label>Name (required): 
      <input type="text" name="name" placeholder="Any name" value="<%= twin.name %>">
    </label><br>
    <label>Image URL:
      <input type="text" name="imgUrl" placeholder="https://..." value="<%= twin.imgUrl %>">
    </label><br>
    <label for="twin-description">Description:</label> <br>
    <textarea id="twin-description" name="description" value="<%= twin.description %>"><%= twin.description %></textarea><br>
    <button class="btn btn-primary btn-lg" type="submit">Save Twin</button>
    <p>* Leave "Image URL" field blank if you want default picture to be applied</p>
  </form>
  </main>

<%- include('../partials/footer') %>