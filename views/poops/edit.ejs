  <h1 class="title"><%= title %></h1>
  <form class="new-item" action="/poops/<%= poop._id %>?_method=PUT" method="POST" autocomplete="off">
    <label>Date: 
      <input type="text" name="date" placeholder="...">
    </label><br>
    <label>Type: 
      <select name="type">
        <option value="Wet" selected>Bottle</option>
        <option value="Dirty">Breast</option>
      </select>
    </label><br>
    <label>Note: 
      <input type="text" name="note" placeholder="...">
    </label><br>
    <label>Share: 
    <input type="checkbox" name="shared" checked
    />
  </label><br>
    <button class="btn btn-primary btn-lg" type="submit">Save Object</button>
    <p>* Leave "Image URL" field blank if you want default picture to be applied</p>
    <p></p>
    <p>*Check "Share" if you allow other people to add your Object</p>
  </form>
  </main>

