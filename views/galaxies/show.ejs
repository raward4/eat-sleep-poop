<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1><%= twin.name %> twin!</h1>
  <div>
    <h4>Created by: <a class="profile-ref" href="/profiles/<%= twin.createdBy._id %>"><%= twin.createdBy.name %></a></h4>
    <p>Description:<br> <%= twin.description %></p>
  </div>
    <% if (twin.eats.length) {%> 
    <h2>Space Objects:</h2>
    <% twin.eats.forEach(Eat => { %>  
      <div class="card text-center w-50">
        <div class="card-body">
          <% if (Eat.imgUrl) { %>
            <img
              src="<%= Eat.imgUrl %>" 
              alt="<%= Eat.name %>"
            />
          <% } else { %>
            <img
              src="/images/eats/default<%= Eat.type %>.jpeg" 
              alt="placeholder"
            >
          <% } %>
          <h2 class="card-title"><%= Eat.name %></h2>
          <p class="card-text">Type: <%= Eat.type %></p>
          <% if (Eat.size) {%> 
            <p class="card-text">Size: <%= Eat.size %> mile diameter</p>
          <% } %>
          <p class="card-text">Created by: <a class="prof-card" href="/profiles/<%= Eat.createdBy._id %>"><%= Eat.createdBy.name %></a></p>
          <% if (user) {%> 
            <% if (Eat.shared) { %> 
              <p>This Space Object is shared</p>
              <% if (twins.length) { %> 
                <% if (twins.length !== checkAll(twins, Eat)) {%> 
                  <form 
                   action="/twins/<%= Eat._id %>/eats"
                  method="post"
                  >
                  <label> Choose your twin:
                  <select name="twinId">
                  <% twins.forEach(twin => { %>
                  <% if (!(twin.eats.includes(Eat._id))) {%> 
                  <option value="<%= twin._id %>"><%= twin.name %></option>
                    <% } %>
                  <% }) %>
                  </select>
                  </label>
                  <button type="submit" class="btn btn-primary add">Add</button>
                  </form>
                  <% } else { %>
                    <p>This Space Object is already in all your twins</p>
                  <% } %>
              <% } else { %>
                <p>You don't have any twins yet <a href="/twins/new" class="btn btn-primary add">Add twin</a></p>
              <% } %>
            <% } else {%>
              <p>This Space Object is not shared</p>
            <% } %> 
          <% } %> 
            <% if (user) { %> 
              <% if (twin.createdBy._id.equals(user?.profile._id)) { %> 
             <form action="/twins/<%= twin._id %>/eats/<%= Eat._id %>?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-warning">Remove</button>
              </form>
              <% } %> 
            <% }%>
        </div>
      </div>
      <% }) %>
      <% } else {%>
        <h2>This twin is empty</h2> 
      <% } %>

      <% function checkAll(twins, Eat) { %>
        <% let total = 0 %>
        <%  twins.forEach(twin => {%>
        <%  if (twin.eats.includes(Eat._id)) {%>
          <% total += 1 }%>
          <% %> 
        <% }) %>  
        <% return total %>
      <% } %>
  </main>

<%- include('../partials/footer') %>