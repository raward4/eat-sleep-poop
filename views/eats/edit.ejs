<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1 class="title"><%= title %></h1>
  <form class="new-item" action="/eats/<%= eat._id %>?_method=PUT" method="POST" autocomplete="off">
    <label>Date: 
      <input type="text" name="date" placeholder="...">
    </label><br>
    <label>Type: 
      <select name="type">
        <option value="<%= eat.type %>"><%= eat.type %></option>
        <option value="Bottle">Bottle</option>
        <option value="Breast">Breast</option>
      </select>
    </label><br>
    <label>Name (required): 
      <input type="text" name="name" placeholder="Any name" value="<%= eat.name %>">
    </label><br>
    <label>Amount:
      <input type="number" name="ounces" placeholder="ounces" value="<%= eat.amount %>">
    </label><br>
    <label>Share: 
    <input type="checkbox" name="shared" <%= eat.shared ? 'checked' : '' %>
    />
  </label><br>
    <button class="btn btn-primary btn-lg" type="submit">Save Object</button>
    <p>* Leave "Image URL" field blank if you want default picture to be applied</p>
    <p></p>
    <p>*Check "Share" if you allow other people to add your Objects</p>
  </form>
  </main>

<%- include('../partials/footer') %>